.login-bg {
  width:100%;
  height:100%;
  background: url("../img/login/home_bg.png")no-repeat;
  background-size: 100% 100%;
}
.mt10{margin-top: 10px !important;}
.login-form{
  margin-top:30%;
}
.loginRegister .item{
	border:0;
	width:240px;height:45px;margin: 0 auto;padding-left:55px;
	background-size: 100% 100%;
}
.loginRegister .login{display: none;}
.loginRegister .register{display: block;}
.loginRegister.active .login{display: block;}
.loginRegister.active .register{display: none;}
.loginRegister input,.loginRegister button{
	font-size: 18px;
}
.loginRegister input[type='text'],.loginRegister input[type='password']{
	border:0;
	color:#fff;line-height: 38px;
}
.account{
	background: url(../img/login/load_03.png) no-repeat;
  -webkit-animation: fadeIn .5s ease;
}
.password{
	background: url(../img/login/load_06.png) no-repeat;
  -webkit-animation: fadeIn .7s ease;
}
.email{
	background: url(../img/login/login_10.png) no-repeat;
  -webkit-animation: fadeIn .9s ease;
}
.phone{
	background: url(../img/login/login_10.png) no-repeat;
  -webkit-animation: fadeIn 1.1s ease;
}
.submit{
	margin:0 auto;display: block;width:240px;color:#fff;
	background: url(../img/login/load_08.png) no-repeat;
  -webkit-animation: fadeIn 1.3s ease;
}
.hint{font-size: 14px;color:#fff;text-align: center;-webkit-animation: fadeIn 1.2s ease;}
.oper{
	position: absolute;bottom: 50px;display: -webkit-flex;-webkit-justify-content: space-between;
	width: 280px;
  left:50%;
  margin-left:-140px;
}
.oper a{
	color:#00d5c3;text-decoration: none;font-size: 16px;padding-left: 20px;
}
.oper .sign{
	background: url(../img/login/load_11.png) no-repeat left center;
  -webkit-transition: all 0.5s ease;-webkit-animation: all 0.5s ease;
}
.oper .sign:after{
	content:'login';
}
.oper .sign.active:after{
	content:'Sign up';
}
@-webkit-keyframes fadeIn{
	0%{ -webkit-transform: translateY(20px); opacity: 0 }
	100%{-webkit-transform: translateY(0);opacity: 1}
}
